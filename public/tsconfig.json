{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "lib": [
            "es6",
            "dom",
            "es2018"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "**/*.tsx",
        "**/*.js"
    ],
    "include":[
        "./src/**/*.ts"
    ]
}