{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "ES2018",
        "lib": [
            "es6",
            "dom",
            "es2018"
        ],
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDirs": [
            "./",
            "../src"
        ],
        "outDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "excludes": [
        "node_modules",
        "/**/node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "../**/*.tsx",
        "/**/*.tsx"
    ],
    "includes":[
        "./src/**/*",
        "../src/**/*"
    ]
}