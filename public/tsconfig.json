{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es6",
        "target": "ES2018",
        "lib": [
            "es6",
            "dom",
            "es2018"
        ],
        "sourceMap": true,
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "./lib",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}